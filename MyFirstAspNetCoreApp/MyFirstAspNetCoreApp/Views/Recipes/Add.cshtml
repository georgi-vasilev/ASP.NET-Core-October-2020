@using MyFirstAspNetCoreApp.ViewModels.Recipes
@model AddRecipeInputModel
<h1>Add recipe</h1>

@*enctype="multipart/form-data" when we want to send image*@
<form method="post" class="col-md-6" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea row="10" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstCooked"></label>
        <input asp-for="FirstCooked" />
        <span asp-validation-for="FirstCooked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control"
                asp-items="@Html.GetEnumSelectList<RecipeType>()">
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time.CookingTime"></label>
        <input asp-for="Time.CookingTime" />
        <span asp-validation-for="Time.CookingTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time.PreparationTime"></label>
        <input asp-for="Time.PreparationTime" />
        <span asp-validation-for="Time.PreparationTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input class="btn btn-primary" type="submit" />
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}